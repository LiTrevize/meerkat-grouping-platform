<head>

<style>
  .sign-google {
    background: url('https://images.theconversation.com/files/93616/original/image-20150902-6700-t2axrz.jpg?ixlib=rb-1.1.0&q=45&auto=format&w=1000&fit=clip') #f2f2f2;
    background-position: -9px -7px;
    background-repeat: no-repeat;
    background-size: 37px 40px;
    padding-left: 42px;
    color: black;
  }
  .link{
    color: black;
    text-decoration: none;
  }
  </style>
</head>



<h1>Posts</h1>

<div class="btn btn-primary">
  <%= link_to "New Post", new_post_path, :method => :get, :class => "link"%>   
</div>

<div class="btn btn-primary">
  <%= link_to "Me", profile_path, :method => :get, :class => "link"%> 
</div>

<div class="btn btn-primary sign-google">
  <%= link_to "Log out", logout_path, :method => :delete, :class => "link"%>   
</div>

<%= form_tag posts_path(@post), :method => :get, :class => 'form' do %>
  <%= label nil, nil, 'Tags: ', :class => 'col-form-label' %>
  <% @tags.each do |tag| %>
    <%= check_box_tag "tagnames[#{tag.name}]", "1", @tags_to_show.include?(tag.name) %>
    <%= "#{tag.name} (#{tag.freq})" %>
  <% end %>
  
  <%= submit_tag 'filter', id: 'filter_submit' %>
  <%= link_to "reset", posts_path %>
<% end %>

<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-4">
        <div class="card" style="width: 16em; height: 16em; border: solid;">
          <div style="padding: 0px 5px">
            <h4 class="card-title text-truncate" style="text-align: center; margin-bottom: 5px"><%= post.title %></h4>
            <% post.tags.each do |tag| %>
              <span class="badge bg-primary" style="border-radius: 0.4em"><%= "#{tag.name} " %></span>
            <% end %>
          </div>
          <div class="card-body" style="padding: 5px 10px">
            <div style="height: 5em"><p class="card-text"><%= post.content %></p></div>
            <%= "Members: #{interval_format(post.low_number, post.high_number)}" %><br/>
            <%= "Date: #{interval_format(datef(post.start), datef(post.end))}" %><br/>
            <%= "Created at #{timef post.created_at}" %><br/>
            <div style="position: absolute; bottom: 0; padding-bottom: 5px; width: 14em">
              <%= link_to "More...", post_path(post) %>
              <div style="float: right">
                <% if @current_user.id==post.user.id %>
                  <%= link_to "Edit", edit_post_path(post), method: :get %>
                <% end %>
                <% if @current_user.id==post.user.id %>
                  <%= link_to "Delete", del_post_path(post), method: :delete %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<table class="table table-striped col-md-12" id="post">
  <thead>
    <tr>
      <th>Title</th>
      <th>Tags</th>
      <th>Need members</th>
      <th>Content</th>
      <th>Period</th>
      <th>Created at</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.title, post_path(post) %>
        </td>
        <td>
          <% post.tags.each do |tag| %>
            <%= "#{tag.name} " %>
          <% end %>
        </td>
        <td>
          <%= interval_format(post.low_number, post.high_number) %>
        </td>
        <td>
          <%= post.content %>
        </td>
        <td>
          <%= interval_format(datef(post.start), datef(post.end)) %>
        </td>
        <td>
          <%= timef post.created_at %>
        </td>
        <td>
          <% if @current_user.id==post.user.id %>
          <%= link_to "Edit", edit_post_path(post), :method => :get %>
          <% end %>
        </td>
        <td>
          <% if @current_user.id==post.user.id %>
          <%= link_to "Delete", del_post_path(post), :method => :delete %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
